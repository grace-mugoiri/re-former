
<%= form_for(@user) do |u| %>
    <ul>
    <% @user.errors.full_messages.each do |error| %>
      <li><%= error %></li>
    <% end %>
    </ul>
    <p>
      <%= u.label :username %><br />
      <%= u.text_field :username, placeholder: "John Doe"%>
    </p>
    <p>
      <%= u.label :email %><br />
      <%= u.email_field :email, placeholder: "johndoe@example.com"%>
    </p>
    <p>
      <%= u.label :password %><br />
      <%= u.password_field :password, placeholder: "create password"%>
    </p>
    <p>
      <%= u.submit %>
    </p>
  <% end %>